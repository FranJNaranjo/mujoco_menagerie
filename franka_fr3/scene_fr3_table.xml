<mujoco model="scene_fr3_table">
  <!-- Robot assembly (FR3 + hand) -->
  <include file="fr3_mounted_updated.xml"/>

  <statistic center="0.7 0 0.8" extent="1.2"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge"
             rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8"
             width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="table_top" rgba="0.85 0.85 0.85 1"/>
    <material name="table_leg" rgba="0.5 0.5 0.5 1"/>
    <material name="box_mat"   rgba="0.9 0.3 0.2 1"/>
  </asset>

    <!-- qpos: [7 of the arm] + [finger_joint1] + [finger_joint2] -->
    <!-- use 0 0 for open fingers, or e.g., 0.02 0.02 for half-closed -->
    

  <worldbody>
    <!-- light and floor -->
    <light pos="0 0 1.8" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- table (top 1.2 x 0.8 x 0.05 at z=0.75) -->
    <geom name="table_top" type="box" size="0.6 0.4 0.025" pos="0.6 0.0 0.75" material="table_top" contype="1" conaffinity="1"/>

    <!-- legs: cylinder size=(radius, half_height). Height=0.75 -> half=0.375; center z=0.375 -->
    <geom name="leg_fl" type="cylinder" size="0.02 0.375" pos="0.05  0.05  0.375" material="table_leg"/>
    <geom name="leg_fr" type="cylinder" size="0.02 0.375" pos="1.15  0.05  0.375" material="table_leg"/>
    <geom name="leg_bl" type="cylinder" size="0.02 0.375" pos="0.05 -0.05  0.375" material="table_leg"/>
    <geom name="leg_br" type="cylinder" size="0.02 0.375" pos="1.15 -0.05  0.375" material="table_leg"/>

    <!-- small box on the tabletop: half-height=0.05 -> center z=0.75+0.05=0.80 -->
    <body name="box"> 
       <geom name="object_geom" type="box" size="0.03 0.03 0.06" rgba="1 0 0 1" mass="0.5"/>
      <joint name="object_joint" type="free" damping="0.01"/> 
    </body>

    <!-- optional camera -->
    <camera name="front_cam" pos="1.6 0 1.0" quat="0.9239 0 0.3827 0" fovy="50"/>
  </worldbody>

  <keyframe>
    <key name="home"
         qpos="0 -0.785 0 -2.356 0 1.571 0.785  0.0 0.0  0.8 0.0 0.8  1 0 0 0"
         ctrl="0 -0.785 0 -2.356 0 1.571 0.785  0"/>
    </keyframe>
</mujoco>
